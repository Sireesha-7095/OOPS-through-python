from tkinter import *
from tkinter.ttk import *
from time  import strftime
root = Tk()
root.title('Clock')
def time():
  string = strftime('%H:%M:%S %p')
  lbl.config(text=string)
  lbl.after(1, time)
lbl = Label(root, font=('aRIAL', 50, 'bold'),
      background='blue',
      foreground='green')
lbl.pack(anchor='center')
time()
mainloop()
